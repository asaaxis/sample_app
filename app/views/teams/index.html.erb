
<h1>所属チーム一覧</h1>

<table>
  <thead>
    <tr>
      <th>チーム名</th>
      <th>所属人数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.members.count %></td>
        <td><%= link_to 'Show', team %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'チーム作成', new_team_path %>
